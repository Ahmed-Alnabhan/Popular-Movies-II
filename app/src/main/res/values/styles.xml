<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="CustomizedToolBar" parent="AppTheme">
        <item name="android:textColor">@color/titles</item>
        <item name="android:textColorPrimary">@color/titles</item>
        <item name="android:background">@color/startGradientColor</item>
        <item name="android:actionOverflowButtonStyle">@style/CustomizedOverflowButton</item>
    </style>

    <style name="CustomizedOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_button</item>
    </style>

    <style name="SettingsFragmentStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@color/settings_activity_text_color</item>
        <item name="android:background">@color/settings_activity_bg_color</item>
        <item name="android:textColorPrimary">@color/settings_activity_text_color</item>
        <item name="android:textAppearance">@color/movieRateBGColor</item>
    </style>

    <style name="AppTheme.ReviewsTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
</resources>
