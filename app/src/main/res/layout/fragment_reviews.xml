<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.elearnna.www.popularmovies.ReviewsFragment"
    android:background="@color/reviews_bg_color">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/review_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/review_movie_title"
        android:background="@color/reviews_title_bg_color"
        android:textColor="@color/titles"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/dimen_8_dp"
        android:paddingRight="@dimen/dimen_8_dp"
        android:textSize="@dimen/text_size_20_sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_reviews"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dimen_8_dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dimen_8_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_8_dp"
        android:layout_marginTop="@dimen/dimen_8_dp"
        app:layout_constraintTop_toBottomOf="@+id/review_movie_title"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintVertical_bias="0.017"
        android:layout_marginStart="@dimen/dimen_8_dp"
        android:layout_marginEnd="@dimen/dimen_8_dp">
    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
