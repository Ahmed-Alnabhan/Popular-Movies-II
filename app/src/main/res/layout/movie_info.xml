<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:background="@drawable/gradient_layer">

        <TextView
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:id="@+id/movieDate"
            android:textAlignment="center"
            tools:text="12/12/2222"
            android:textColor="@android:color/white"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@+id/ic_calender"
            android:layout_marginLeft="@dimen/dimen_14_dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_39_dp"
            android:layout_marginStart="@dimen/dimen_14_dp" />

        <TextView
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:id="@+id/movieVoteRate"
            android:textAlignment="center"
            android:layout_gravity="center"
            tools:text="10/10"
            android:textColor="@color/movieTitleFGColor"
            android:layout_marginTop="@dimen/dimen_39_dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/dimen_8_dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dimen_14_dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="@dimen/dimen_8_dp"
            android:layout_marginEnd="@dimen/dimen_8_dp"
            android:paddingRight="@dimen/dimen_16_dp"
            android:paddingEnd="@dimen/dimen_16_dp"/>

        <TextView
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:id="@+id/movieThumb"
            android:textColor="@android:color/white"
            android:paddingLeft="@dimen/dimen_16_dp"
            android:paddingTop="@dimen/dimen_16_dp"
            android:paddingEnd="@dimen/dimen_16_dp"
            android:lineSpacingMultiplier="1.5"
            android:lines="4"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideOverlay"
            android:fadeScrollbars="true"
            android:fadingEdge="vertical"
            tools:text="UI contains an element (e.g., a spinner or settings menu) to toggle the sort order of the movies by: most popular, highest rated.
Movies are displayed in the main layout via a grid of their corresponding movie poster thumbnails."
            android:paddingBottom="@dimen/dimen_16_dp"
            android:paddingRight="@dimen/dimen_16_dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="@dimen/dimen_8_dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dimen_8_dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/dimen_8_dp"
            android:layout_marginEnd="@dimen/dimen_8_dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="@dimen/dimen_8_dp"
            app:layout_constraintTop_toBottomOf="@+id/movieDate" />

        <ImageView
            android:id="@+id/ic_calender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_calendar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_32_dp"
            android:layout_marginLeft="@dimen/dimen_24_dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/dimen_24_dp" />

        <ImageView
            android:id="@+id/ic_rate"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rate"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_32_dp"
            android:layout_marginRight="@dimen/dimen_14_dp"
            android:layout_marginEnd="@dimen/dimen_14_dp"
            app:layout_constraintRight_toLeftOf="@+id/movieVoteRate"/>
    </android.support.constraint.ConstraintLayout>

</layout>